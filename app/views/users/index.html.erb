<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Users</h1>
    <div class="">
      <%= form_with url: users_path, method: :get, data: { controller: "form", action: "input->form#submit", turbo_frame: "users", turbo_action: "advance" } do %>
        <%= text_field_tag "filter", nil, placeholder: "Filter", class: "inline-block rounded-md border border-gray-200 outline-none px-3 py-2  w-full" %>
      <% end %>
    </div>
  </div>
  <div class="min-w-full my-8">
    <div class="table font-bold min-w-full">
      <div>Name</div>
      <div>Email</div>
      <div>Age</div>
      <div>Phone</div>
      <div></div>
    </div>
    <%= turbo_frame_tag "new-user-form", src: new_user_path %>
    <%= turbo_frame_tag "users" do %>
      <%= render @users %>
    <% end %>
  </div>
</div>
<%= render partial: "layouts/pagination", locals: { pagination: @pagination } %>
